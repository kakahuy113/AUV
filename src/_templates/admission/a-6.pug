section.admission-how-to-apply
	.container
		.container-custom.size-1088px
			.admission-how-to-apply__wrapper
				.guide-apply
					.img
						img.object-cover.fullsize.lazyload.blup-up(src="./assets/images/admission/how-to-apply.png", alt="")
